
{{#if errors}}
  {{#each errors}}
  <div class="alert alert-danger">
    {{this.msg}}
  </div>
  {{/each}}
{{/if}}

{{#if error}}
  <div class="alert alert-danger">
    {{error}}
  </div>
  {{/if}}
  
  
  {{#if success}}
  <div class="alert alert-success">
    {{success}}
  </div>
  {{/if}}

<div class="card card-user">
	  <div class="card-header">
		<h5 class="card-title text-center">ADD PASSWORD</h5>
	  </div>
	  <div class="card-body"><br><br>
		<form action = "/add-password" method = "post">
		  
			<div class="row">
			<div class="col-md-4 pr-1">
			  <div class="form-group">
				<label>Email</label>
				<input class="form-control" placeholder="Email" type="email" name = "username" value = "{{email}}" readonly/>
                      </div>
			</div>
			<div class="col-md-4 pr-1">
			  <div class="form-group">
				<label>Password</label>
				<input class="form-control" placeholder="Password"  id = "REGpassword" type="password" name = "password" value = "{{password}}" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/ >
                     </div>
			</div>
			<div class="col-md-4 pr-1">
			  <div class="form-group">
				<label>Retype Password</label>
				<input class="form-control" placeholder="Password"  id = "REGpassword" type="password" name = "cpassword" value = "{{password}}" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required/ >
                     </div>
			</div></div>
			<div class="row">
                    <div class="update ml-auto mr-auto">
                      <button type="submit" class="btn btn-primary text-center btn-round">add password</button>
                    </div>
                  </div>
		</form>
	  </div>
	</div>
  </div>
</div>