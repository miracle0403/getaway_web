 {{> spagenav}}
 
 <div class = "content">
 <br> <br>
 {{#if errors}}
  {{#each errors}}
  <div class="alert alert-danger">
    {{this.msg}}
  </div>
  {{/each}}
{{/if}}
 <div class = "row">
 
 
 <div class="col-md-4">
 <div class="card card-user">
				<div class="card-header">
					<h5 class="card-title" id = "adduser"> ADD NEW USER </h5>
					
				</div>
				<div class="card-body">
					<form action = "/add-user" method = "POST">
						{{#showErrors}}
						{{#addusererror}}
							<div id = "addusererror" class="alert alert-danger">
								{{.}}
							</div>
						{{/addusererror}}
						{{/showErrors}}
						
						{{#showSuccess}}
						{{#addusersuccess}}
							<div id = "addusersuccess" class="alert alert-success">
								{{.}}
							</div>
						{{/addusersuccess}}
						{{/showSuccess}}
							
								<label>Full Name</label>
								<input type="text" name = "fullname" class="form-control" placeholder="Enter Full Name"  required/>
								
								<label>Email</label>
								<input type="email" name = "email" class="form-control" placeholder="Enter Email"  required/>
							
							
								<label>Phone Number</label>
								<input type="tel" name = "phone" class="form-control" placeholder="Enter Phone"  />
								
							<label>Role</label>
								<select name = "role" class="form-control">
									
									<option></option>
									<option>Administrator</option>
										<option>Accountant</option>
										<option>Marketer</option>
										<option>Store Keeper</option>
									
								</select>
								<small><button class = "btn btn-primary" id = "add-admin" type "submit">SUBMIT</button></small>
						
					</form>
				</div>
			</div>
 </div>

 
 
<div class="col-md-4">
 <div class="card card-user">
				<div class="card-header">
					<h5 class="card-title" ID = "deletestudent"> REMOVE USER </h5>
					
				</div>
				<div class="card-body">
					<form action = "/deleteuser" method = "POST">
						{{#showErrors}}
						{{#deleteusererror}}
							<div id = "deleteuser" class="alert alert-danger">
								{{.}}
							</div>
						{{/deleteusererror}}
						{{/showErrors}}
							<div id = "deleteusererrorajax" class="alert alert-danger">
								<p id = "ajaxerror"></>
							</div>
							
						{{#showSuccess}}
						{{#deleteusersuccess}}
							<div id = "deleteuser" class="alert alert-success">
								{{.}}
							</div>
						{{/deleteusersuccess}}
						{{/showSuccess}}
						
						{{#showSuccess}}
						{{#deleteusersuccessajax}}
							<div id = "deleteuser" class="alert alert-success">
								{{.}}
							</div>
						{{/deleteusersuccessajax}}
						{{/showSuccess}}
							
								<label>Full Name</label>
								<select name = "name" id = "name" class="form-control">
									{{#if deleteuserror}}
										{{#if names}}
										{{#each names}}
											<option></option>
											<option>{{full_name}}</option>
										{{/each}}
										{{/if}}
									{{else}}									
										<option></option>
									{{#if users}}
									{{#each users}}
										<option>{{full_name}}</option>
									{{/each}}	
									{{/if}}
									{{/if}}
									
								</select>
							
							
															
							
								<small><button class = "btn btn-primary" id = "removeUser" type "button">SUBMIT</button></small>
						
					</form>
				</div>
			</div>
 </div>
 
 
 
<div class="col-md-4">
 <div class="card card-user">
				<div class="card-header">
					<h5 class="card-title" ID = "changeroles"> CHANGE ROLES </h5>
					
				</div>
				<div class="card-body">
					<form action = "/changeroles" method = "POST">
						{{#showErrors}}
						{{#changeroleserror}}
							<div id = "roleserror" class="alert alert-danger">
								{{.}}
							</div>
						{{/changeroleserror}}
						{{/showErrors}}
						
						{{#showSuccess}}
						{{#changerolessuccess}}
							<div id = "rolessuccess" class="alert alert-success">
								{{.}}
							</div>
						{{/changerolessuccess}}
						{{/showSuccess}}
							
							<label>Full Name</label>
								<select name = "name" class="form-control">
									{{#if changeroleserror}}
										{{#if names}}
										{{#each names}}
											<option></option>
											<option>{{full_name}}</option>
										{{/each}}
										{{/if}}
									{{else}}									
										<option></option>
									{{#if users}}
									{{#each users}}
										<option>{{full_name}}</option>
									{{/each}}	
									{{/if}}
									{{/if}}
									
								</select>
							
							
								<label>New Role</label>
								<select name = "role" class="form-control">
									
									<option></option>
									<option>Administrator</option>
										<option>Accountant</option>
										<option>Marketer</option>
										<option>Store Keeper</option>
									
								</select>
							
							
							
							
							
							
							
								<small><button class = "btn btn-primary" id = "add-admin" type "submit">SUBMIT</button></small>
						
					</form>
				</div>
			</div>
 </div>
 
 </div>
 
 
 
 
 </div> 
 
 
 
 
 
 
 </div>