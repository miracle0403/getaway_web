 {{> spagenav}}
	<div class="content">
		<br> <br>
		{{#if errors}}
			{{#each errors}}
				<div class="alert alert-danger">
					{{this.msg}}
				</div>
			{{/each}}
		{{/if}}
		
		<div class = "row">
		
			<div class="col-md-4">
				<div class="card card-user">
					<div class="card-header">
						<h5 class="card-title" id = "adduser"> ADD USER </h5>
					</div>
					
					<div class="card-body">
						<form action = "/add-user" method = "POST">
							{{#showErrors}}
							{{#addresultserror}}
								<div id = "roleserror" class="alert alert-danger">
									{{.}}
								</div>
							{{/addresultserror}}
							{{/showErrors}}
							
							{{#showSuccess}}
							{{#addresultssuccess}}
								<div id = "rolessuccess" class="alert alert-success">
									{{.}}
								</div>
							{{/addresultssuccess}}
							{{/showSuccess}}
							
							
								<label>Full Name</label>
								<input type="text" name = "fullname" class="form-control" placeholder="Enter Full Name"  required/>
						
													
								<label>Email</label>
								<input type="email" name = "email" class="form-control" placeholder="Enter Email"  required/>
							
							
							
								<label>Phone</label>
								<input type="tel" name = "phone" class="form-control" placeholder="Enter Phone number"  required/>
						
						
							
								<label>Role</label>
									<select class = "form-control" name = "role>
										<option></option>
										<option>Administrator</option>
										<option>Accountant</option>
										<option>Marketer</option>
										<option>Store Keeper</option>
									</select>
							
						
							
								<small><button class = "btn btn-primary" id = "add-admin" type "submit">SUBMIT</button></small>
							
						</form>
					</div>
					
				</div>
			</div>
			
			
			
			
			
			
		</div>
		
	</div>